				<option value="0">添加为顶级类</option>
	<?php if(!empty($flRows1)){?>
		<?php foreach( $flRows1 as $k => $v ){?>
			<?php if( $v['id'] == $row['pid'] ){?>	
				<option value="<?php echo $v['id'];?>" selected="selected" ><?php echo $v['title'];?></option>
			<?php }else{?>
				<?php if( $v['id'] != $row['id'] ){?>	
