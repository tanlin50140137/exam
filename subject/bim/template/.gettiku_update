<script>
function update_tiku()
{
	if( $("[name='pid']").val()==0 )
	{
		layer.tips('请选择分类', $("[name='pid']") );
		return false;
	}
	if( $("[name='dry']").val()=='' )
	{
		layer.tips('题干不能留空', $("[name='dry']") );
		return false;
	}
	if( $("[name='options']").val()=='' )
	{
		layer.tips('选择不能留空', $("[name='options']") );
		return false;
	}
	if( $("[name='numbers']").val()=='' )
	{
		layer.tips('数量不能留空', $("[name='numbers']") );
		return false;
	}
	if( $("[name='answers']").val()=='' )
	{
		layer.tips('答案不能留空', $("[name='answers']") );
		return false;
	}	
	$("#ify_frm").submit();
}
function Diachronic(){
	window.history.go(-1);
}
</script>
