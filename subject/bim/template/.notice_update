<script>
var ue = UE.getEditor('container');
function Diachronic()
{
	window.history.go(-1);
}
function frm_send()
{
	var title = $("[name='title']").val();
	if( title == '' )
	{
		layer.msg('请输入标题');
		$("[name='title']").focus();
		return false;
	}
	var ify = $("[name='ify']").val();
	if( ify == '0' )
	{
		layer.msg('请选择考场');
		$("[name='ify']").focus();
		return false;
	}
	var txt = ue.getContentTxt();
	var reg=/<[^<>]+>/g;
		txt=txt.replace(reg,''); 
	if( txt == '' )
	{
		layer.msg('请输入内容');
		ue.focus();
		return false;
	}
	$("#_frm").submit();
}
</script>
